<%= simple_form_for [@trip, @place, @transport] do |f| %>
  <%= f.input :type_of_transport, collection: %w(train plane bus car taxi boat), include_blank: false %>
  <%= f.input :start_location %>
  <%= f.input :formatted_start_date, as: :date %>
  <%= f.input :formatted_end_date, as: :date %>
  <%= f.input :cost, as: :float %>
  <%= f.button :submit, class: 'btn btn-success btn-block' %>
<% end %>
